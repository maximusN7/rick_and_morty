<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_menu"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.example.rickandmorty.presentation.characters.CharactersFragment"
        android:label="Character"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_charactersFilterFragment"
            app:destination="@id/charactersFilterFragment" />
        <action
            android:id="@+id/action_charactersFragment_to_charactersDetailFragment"
            app:destination="@id/charactersDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.example.rickandmorty.presentation.locations.LocationsFragment"
        android:label="Location"
        tools:layout="@layout/fragment_locations" >
        <action
            android:id="@+id/action_locationsFragment_to_locationFilterFragment"
            app:destination="@id/locationFilterFragment" />
        <action
            android:id="@+id/action_locationsFragment_to_locationDetailFragment"
            app:destination="@id/locationDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodesFragment"
        android:name="com.example.rickandmorty.presentation.episodes.EpisodesFragment"
        android:label="Episodes"
        tools:layout="@layout/fragment_episodes" >
        <action
            android:id="@+id/action_episodesFragment_to_episodesFilterFragment"
            app:destination="@id/episodesFilterFragment" />
        <action
            android:id="@+id/action_episodesFragment_to_episodeDetailFragment"
            app:destination="@id/episodeDetailFragment" />
    </fragment>

    <dialog
        android:id="@+id/charactersFilterFragment"
        android:name="com.example.rickandmorty.presentation.characters.CharactersFilterFragment"
        android:label="fragment_characters_filter"
        tools:layout="@layout/fragment_characters_filter" />
    <dialog
        android:id="@+id/episodesFilterFragment"
        android:name="com.example.rickandmorty.presentation.episodes.EpisodesFilterFragment"
        android:label="fragment_episodes_filter"
        tools:layout="@layout/fragment_episodes_filter" />
    <dialog
        android:id="@+id/locationFilterFragment"
        android:name="com.example.rickandmorty.presentation.locations.LocationFilterFragment"
        android:label="fragment_locations_filter"
        tools:layout="@layout/fragment_locations_filter" />
    <fragment
        android:id="@+id/charactersDetailFragment"
        android:name="com.example.rickandmorty.presentation.characters.CharactersDetailFragment"
        android:label="fragment_character_detail"
        tools:layout="@layout/fragment_character_detail" >
        <action
            android:id="@+id/action_charactersDetailFragment_to_locationDetailFragment"
            app:destination="@id/locationDetailFragment" />
        <action
            android:id="@+id/action_charactersDetailFragment_to_episodeDetailFragment"
            app:destination="@id/episodeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailFragment"
        android:name="com.example.rickandmorty.presentation.episodes.EpisodeDetailFragment"
        android:label="fragment_episode_detail"
        tools:layout="@layout/fragment_episode_detail" >
        <action
            android:id="@+id/action_episodeDetailFragment_to_charactersDetailFragment"
            app:destination="@id/charactersDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.example.rickandmorty.presentation.locations.LocationDetailFragment"
        android:label="fragment_location_detail"
        tools:layout="@layout/fragment_location_detail" >
        <action
            android:id="@+id/action_locationDetailFragment_to_charactersDetailFragment"
            app:destination="@id/charactersDetailFragment" />
    </fragment>
</navigation>